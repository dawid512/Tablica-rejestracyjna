@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="row d-flex justify-content-center">
    @*<div class="com-md6 offset-md-3">*@
    <div class="cardwybierz  ">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">

                    <a class="nav-link login_register" href='/Identity/Account/Login'>Zaloguj</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link login_register" href='/Identity/Account/Register'>Zarejestruj</a>
                </li>
            </ul>
        </div>
        <div class="card-content">
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @*</div>*@
</div>

@section Scripts{
    @RenderSection("Scripts", required: false)

    <script>
        $(function () {
            var current = this.location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>

}
