            <a method="post" asp-controller="tablice" asp-action="Ocena_tablice" asp-route-idX="@tablica.tablicaId" asp-route-ocen_w_gore=" @tablica.ocen_w_gore">
                <span class="fingerUp" title="Dobry kierowca"></span>
