@model tablica_rejestracyjna.Data.Komentarze

@{

    List<tablica_rejestracyjna.Data.Komentarze> komentarze = ViewBag.Komentarze;
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var tablica = ViewBag.Tablice;

}
@using Microsoft.AspNetCore.Identity
@using tablica_rejestracyjna.Data;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<style>
    body {
        background-color: #4A8EC2;
        color: #E4EEF6;
    }

    a, a:visited {
        color: #fff;
    }

        a:hover {
            color: #e4eef6;
        }

    span.plate {
        background: url('/pl.png') no-repeat #fff;
        background-position-y: -6px;
        padding: 2px 14px 2px 18px;
        border: 2px solid #000;
        clear: both;
        height: 38px;
        font-size: 200%;
        color: #000;
        font-family: Lucida Console,Monaco,monospace;
        padding: 2px 14px 2px 18px;
        border: 2px solid black;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        border-radius: 3px;
    }

        span.plate a, span.plate a:visited, span.plate a:hover {
            color: #000;
            font-family: sans-serif,Lucida Console,Monaco,monospace;
        }

    img.plate {
        height: 58px;
        border-radius: 7px;
    }

    .voteOption {
        float: left;
        margin-left: 10px;
    }

    .fingerUp, .fingerDown {
        width: 44px;
        height: 43px;
        display: inline-block;
        line-height: 43px;
        background-image: url(https://tablica-rejestracyjna.pl/img/up-down.png);
        background-position: -102px -6px;
        border-radius: 12px;
        border: 1px solid black;
        box-shadow: 0px 0px 6px black;
    }

    .fingerDown {
        background-position: -102px -55px;
    }

    .voteOption .ttip {
        height: 43px;
        display: inline-block;
        line-height: 43px;
        width: 100px;
        vertical-align: top;
    }

        .voteOption .ttip .caret {
            display: inline-block;
            width: 0;
            height: 0;
            margin-left: 2px;
            vertical-align: middle;
            border-right: 10px solid white;
            border-top: 10px solid transparent;
            border-bottom: 10px solid transparent;
        }

        .voteOption .ttip .box {
            width: 44px;
            height: 43px;
            display: inline-block;
            line-height: 43px;
            border-radius: 6px;
            color: black;
            background-color: white;
            position: absolute;
            text-align: center;
        }

    .voteOption a {
        text-decoration: none;
    }
</style>

